{% extends 'base.html.twig' %}

{% block body %}

    <h1>inscription</h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {'label': 'Nom d\'utilisateur','attr': {'placeholder': 'Votre nom d\' utilisateur'}}) }}
    {{ form_row(form.email, {'label': 'Email','attr': {'placeholder': 'ex: xyz.xyz@xyz'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'Votre mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe','attr': {'placeholder': 'Confirmez votre mot de passe'}}) }}

    <button type="submit" class="btn btn-success">Inscription</button>

    {{ form_end(form) }}

{% endblock %}